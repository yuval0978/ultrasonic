#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2); //(F3)
void setup(){	
	lcd.init()
	lcd.backlight();

}


void loop()
{
  lcd.clear();                 
  lcd.setCursor(0, 0);         
  lcd.print("nigger");        
  lcd.setCursor(2, 1);         
  lcd.print("I_love_niggers"); 
  delay(2000);                 

}
